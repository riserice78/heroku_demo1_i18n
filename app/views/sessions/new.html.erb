  <style type="text/css">
    body{
    	background-image: url(<%= getImageByCode("01") == false ? image_url('fruits.jpg') : getImageByCode("01") %>);
    	background-size: cover;
    	background-repeat: no-repeat;
    	background-position: center top;
    	min-height: 700px;
    }
    .container {
      //width: 400px;
    }
    /* The white background content wrapper */
    .container > .content {
      background-color: #fff;
      padding: 20px;
      margin: 0 20px 0 20px;
      border-radius: 10px 10px 10px 10px;
      box-shadow: 0 1px 2px rgba(0,0,0,.15);
    }
    .login-form {
      margin-left: 50px;
      margin-right: 50px;
    }
  </style>

<div class="container" style="max-width:500px;padding-top:30px;">
	<div class="content">
		<p class="alert"><%=flash[:alert] %></p>
		<div class="row">
			<div class="login-form">
				<h4><%= t('login_greeting') %></h4>
				<%=form_tag sessions_path do %>
					<div class="alert alert-danger hidden" role="alert"></div>
					<fieldset>
						<div class="clearfix">
							<%=text_field_tag :email, nil, class:"form-control", placeholder: t('mail')  %>
						</div>
						<div class="clearfix">
							<%=password_field_tag :password, nil, class:"form-control", placeholder: t('password')  %>
						</div>
						<div class="text-right" style="margin-top:10px;">
							<%=link_to t('sign_up'), new_user_path%>
							<%=submit_tag t('login'), class:"btn btn-primary"%>
						</div>
					</fieldset>
				<% end %>
			</div>
		</div>
	</div>
</div>
